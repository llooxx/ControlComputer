<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="名称"
            android:textSize="16sp" />


        <com.dinuscxj.progressbar.CircleProgressBar
            android:id="@+id/item_progress"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:background_color="@color/colorPrimary"
            app:draw_progress_text="true"
            app:line_count="100"
            app:line_width="10dp"
            app:progress_background_color="@color/colorAuxiliary"
            app:progress_end_color="@color/colorAccent"
            app:progress_shader="radial"
            app:progress_start_color="@color/colorAccent"
            app:progress_stroke_cap="round"
            app:progress_stroke_width="10dp"
            app:progress_text_color="@color/ivory"
            app:progress_text_format_pattern="0％"
            app:progress_text_size="18sp"
            app:style="solid" />
    </LinearLayout>


</android.support.v7.widget.CardView>